{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts"
    ]
  },
  "rules": {
    "no-console": {
      "severity": "warning",
      "options": ["log"]
    },
    "ordered-imports": {
      "import-sources-order" : "any",
      "grouped-imports": "false",
      "named-imports-order" : "case-insensitive",
      "module-source-path": "basename"
    }
  }
}
